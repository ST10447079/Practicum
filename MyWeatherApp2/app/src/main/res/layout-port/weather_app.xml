<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
    android:gravity="bottom|center_horizontal|top"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="508dp"
        android:layout_gravity="clip_horizontal|center_horizontal|top"
        android:scrollIndicators="top"
        android:src="@drawable/weather_logo" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:ems="10"
        android:gravity="center_horizontal|top|left"
        android:inputType="text|textAutoComplete|textCapWords"
        android:text="Name:" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:ems="10"
        android:inputType="text"
        android:text="Student Number:" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="THE WEATHER APP" />

    <Button
        android:id="@+id/Next"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:height="170dp"
        android:backgroundTint="#8BC34A"
        android:gravity="center_horizontal"
        android:text="Next" />

</LinearLayout>